<h3>Signup</h3>
<% if (errors && errors.length) { %>
  <p>Please, correct the following:</p>
  <ul>
  <% for (var i in errors) { %>
    <li><%= errors[i].message %></li>
  <% } %>
  </ul>
<% } %>
<form method="post" action="/users/create">
  <label>User: </label>
  <input type="text" name="user[alias]" value="<%= user.alias %>" size="15"/>
  <label>Password: </label>
  <input type="password" name="user[password]" value="<%= user.password %>" size="15"/>
  <input type="submit" value="Signup"/>
</form>
